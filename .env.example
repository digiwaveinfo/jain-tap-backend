# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# Jain TAP Backend
# ============================================
# Copy this file to .env and update values

# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS) - comma-separated for multiple origins
CLIENT_URL=http://localhost:3000

# API URL (for image URLs in responses)
API_URL=http://localhost:5000

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT Secret - MUST be at least 32 characters in production
# Generate: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=change-this-to-a-secure-secret-key-at-least-32-chars

# JWT Token Expiry
JWT_EXPIRE=7d

# Admin Credentials
ADMIN_USERNAME=admin

# Password Hash - Generate with: node -e "console.log(require('bcryptjs').hashSync('YOUR_PASSWORD', 10))"
# Example hash for 'admin123':
ADMIN_PASSWORD_HASH=$2a$10$arUi9eXBdUxI8cUlnyDQ4uz6BBcNG2UylUy4erRBlyk7w/C2I2iCK

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@example.com
# ADMIN_EMAIL=admin@example.com

# ============================================
# FILE PATHS
# ============================================

DB_PATH=./data/submissions.sqlite
BACKUP_DIR=./data/backups
EXPORT_DIR=./data/exports
ARCHIVE_DIR=./data/archives

# ============================================
# LOGGING
# ============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info
