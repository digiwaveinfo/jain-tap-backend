# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS)
CLIENT_URL=http://localhost:8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Admin Credentials
# Generate password hash using: node -e "require('bcryptjs').hash('your-password', 10).then(console.log)"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$YourHashedPasswordHere

# Email Configuration (Optional - for sending confirmation emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@viharraksha.com

# File Paths
EXCEL_FILE_PATH=./data/submissions.xlsx
BACKUP_DIR=./data/backups
